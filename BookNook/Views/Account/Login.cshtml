@model LoginViewModel

@{
    ViewData["Title"] = "Log In - BookNook";
    Layout = "_Layout";
}

<div class="login-container">
    <div class="login-form-section">
        <h1 class="login-title">Log In</h1>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Escribe tu email" asp-for="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" placeholder="Escribe tu contraseña" asp-for="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="login-button">Log In</button>

            <div class="register-link">
                <span>¿No tienes una cuenta? </span>
                <a asp-controller="Account" asp-action="Register">Regístrate aquí</a>
            </div>
        </form>
    </div>

    <div class="login-illustration img">
        <img src="~/images/open-book.png" alt="Book illustration" asp-append-version="true" />
    </div>
</div>

