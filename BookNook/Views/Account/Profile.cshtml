@model BookNook.Models.ProfileViewModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="stats-card w-100">
                <h4 class="mb-3">Información Personal</h4>
                <form asp-action="UpdateProfile" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Apellido" class="form-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Correo" class="form-label"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-add">
                        Actualizar Información
                    </button>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="stats-card w-100">
                <h4 class="mb-3">Cambiar Contraseña</h4>
                <form asp-action="ChangePassword" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="ContraseñaActual" class="form-label"></label>
                        <input asp-for="ContraseñaActual" class="form-control" type="password" />
                        <span asp-validation-for="ContraseñaActual" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="NuevaContraseña" class="form-label"></label>
                        <input asp-for="NuevaContraseña" class="form-control" type="password" />
                        <span asp-validation-for="NuevaContraseña" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmarContraseña" class="form-label"></label>
                        <input asp-for="ConfirmarContraseña" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-back">
                        Cambiar Contraseña
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}