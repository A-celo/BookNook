@model BookNook.Models.NewBookViewModel
@{
    ViewData["Title"] = "Agregar Libro";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Books" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Titulo">Título</label>
        <input type="text" class="form-control" id="Titulo" name="Titulo" asp-for="Titulo" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Autor">Autor</label>
        <input type="text" class="form-control" id="Autor" name="Autor" asp-for="Autor" />
        <span asp-validation-for="Autor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="AnoPublicacion">Año de Publicación</label>
        <input type="number" class="form-control" id="AnoPublicacion" name="AnoPublicacion" asp-for="AnoPublicacion" min="1000" max="9999" />
        <span asp-validation-for="AnoPublicacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Genero">Género</label>
        <input type="text" class="form-control" id="Genero" name="Genero" asp-for="Genero" />
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Subgenero">Subgénero</label>
        <input type="text" class="form-control" id="Subgenero" name="Subgenero" asp-for="Subgenero" />
        <span asp-validation-for="Subgenero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Idioma">Idioma</label>
        <input type="text" class="form-control" id="Idioma" name="Idioma" asp-for="Idioma" />
        <span asp-validation-for="Idioma" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NumeroPaginas">Número de Páginas</label>
        <input type="number" class="form-control" id="NumeroPaginas" name="NumeroPaginas" asp-for="NumeroPaginas" />
        <span asp-validation-for="NumeroPaginas" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ImagenPortadaFile">Imagen de Portada</label>
        <input type="file" class="form-control" id="ImagenPortadaFile" name="ImagenPortadaFile" accept="image/*" asp-for="ImagenPortadaFile" />
        <span asp-validation-for="ImagenPortadaFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Agregar Libro</button>
</form>

<a href="@Url.Action("Biblioteca", "Books")" class="btn btn-secondary mt-3">Volver a la Biblioteca</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    }
}


